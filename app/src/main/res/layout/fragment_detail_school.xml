<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/school_info_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.google.android.gms.maps.MapView
            android:id="@+id/fragment_replace"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назив школе:" />

        <TextView
            android:id="@+id/naziv"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Место школе:" />

        <TextView
            android:id="@+id/mesto"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Опстина школе:" />

        <TextView
            android:id="@+id/opstina"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Адреса школе:" />

        <TextView
            android:id="@+id/adresa"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поштански број школе:" />

        <TextView
            android:id="@+id/pbroj"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Округ школе:" />

        <TextView
            android:id="@+id/okrug"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Суправа школе:" />

        <TextView
            android:id="@+id/suprava"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сајт школе:" />

        <TextView
            android:id="@+id/www"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Контакт телефон школе:" />

        <TextView
            android:id="@+id/tel"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Факс школе:" />

        <TextView
            android:id="@+id/fax"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Врста школе:" />

        <TextView
            android:id="@+id/vrsta"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/DetailSchoolTextFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Одељења школе:" />

        <TextView
            android:id="@+id/odeljenja"
            style="@style/DataSchoolTextGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp" />

    </LinearLayout>

</ScrollView>
