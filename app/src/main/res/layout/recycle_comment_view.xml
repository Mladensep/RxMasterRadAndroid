<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/school_info_text"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/naslov_fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/school_info_back"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Наслов коментара:"/>

        <TextView
            android:id="@+id/naslov_komentara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/school_info_back"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/naslov_fix"/>

        <TextView
            android:id="@+id/komentar_fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/school_info_back"
            android:layout_marginLeft="5dp"
            android:text="Коментар:"
            android:layout_below="@id/naslov_komentara"/>

        <TextView
            android:id="@+id/sadrzaj_komentara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/school_info_back"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/komentar_fix"/>

        <TextView
            android:id="@+id/korisnik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/school_info_back"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="ime"
            android:layout_below="@id/sadrzaj_komentara"/>

        <TextView
            android:id="@+id/datum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/school_info_back"
            android:text="vreme"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/sadrzaj_komentara"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>